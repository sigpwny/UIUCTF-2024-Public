{
  "manifest_version": 2,
  "name": "pwnypass",
  "version": "1.0",
  "description": "SIGPwny password manager",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "incognito": "split",
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'none';",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": ["autofill.html"],
  "page_action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
